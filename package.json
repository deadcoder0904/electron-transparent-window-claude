{
	"name": "electron-transparent-overlay",
	"author": "Your Name <your.email@example.com>",
	"version": "1.0.0",
	"description": "Transparent overlay that allows interaction with content underneath",
	"main": "dist/main/index.js",
	"type": "module",
	"scripts": {
		"dev": "electron-vite dev",
		"build": "electron-vite build && electron-builder",
		"clean": "rimraf dist .yek",
		"type:check": "bunx tsc --noEmit",
		"format": "deno fmt"
	},
	"devDependencies": {
		"@electron/remote": "^2.1.3",
		"@tailwindcss/vite": "^4.1.11",
		"@types/node": "^24.2.1",
		"electron": "^37.2.6",
		"electron-builder": "^26.0.12",
		"electron-vite": "^4.0.0",
		"rimraf": "^6.0.1",
		"tailwindcss": "^4.1.11",
		"typescript": "^5.9.2",
		"vite": "^7.1.1",
		"vite-plugin-electron": "^0.29.0"
	},
	"build": {
		"appId": "com.yourname.electron-transparent-overlay",
		"files": [
			"dist/**/*",
			"package.json"
		],
		"directories": {
			"output": "release",
			"buildResources": "resources"
		}
	},
	"dependencies": {
		"@types/react": "^19.1.9",
		"@types/react-dom": "^19.1.7",
		"react": "^19.1.1",
		"react-dom": "^19.1.1"
	}
}
